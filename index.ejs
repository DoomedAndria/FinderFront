<!DOCTYPE html>
<html>
<head>
    <title>User Table</title>
    <style>
        .img{
            height: 100%;
            aspect-ratio: 1/1;
        }
        .img img{
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .row{
            width: 900px;
            height: 80px;
            background: aliceblue;
            display: flex;
            padding: 10px;
            border-radius: 5px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            margin-bottom: 10px;
        }
        .row> div,.row> div a{
            width: 100%;
            display: flex;
            font-family: sans-serif;
            color: #015b5b;
            font-weight: bold;
            font-size: 18px;
            align-items: center;
        }
        .row> div a:visited{
            color: crimson;
        }
        body{
            background: #9ecacb;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .pagin{
            width: 70px;
            height: 40px;
            padding: 5px;
            background: dodgerblue;
            color: white;
            border-radius: 4px;
            font-weight: bold;
            font-family: sans-serif;
            text-decoration: none;
        }
        .pagin-cont{
            margin-bottom: 20px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="pagin-cont">
        <% if (page > 1) { %>
            <a class="pagin" href="/users/<%= page - 1 %>">Previous</a>
        <% } %>
        <% if (users.length === limit) { %>
            <a class="pagin" href="/users/<%= page + 1 %>">Next</a>
        <% } %>
    </div>
    <% for (let i = 0; i < users.length; i++) { %>
        <div class="row">
            <div>
                <div class="img"><img src="<%= users[i]['img url: '] %>"></div>
            </div>
            <div><a href="<%= users[i].prof_link %>"><%= users[i].name %></a></div>
            <div><p><%= users[i].price %></p></div>
            <div><a href="<%= users[i].item %>">Item</a></div>
        </div>
    <% } %>

    <div class="pagin-cont">
        <% if (page > 1) { %>
            <a class="pagin" href="/users/<%= page - 1 %>">Previous</a>
        <% } %>
        <% if (users.length === limit) { %>
            <a class="pagin" href="/users/<%= page + 1 %>">Next</a>
        <% } %>
    </div>
</body>
</html>
